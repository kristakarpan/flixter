<br />

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center">Learn something today</h1>
  <hr />

  <% @course.each do |course| %>
    <h2 class="text-center"><%= link_to course.title, course_path(course) %></h2>
    
    <div class="text-center">
      <%= course.description %>
    </div>
    <%= image_tag course.image, class: 'img-responsive' %>
    <div class="text-center">
      <%= link_to 'More Details', course_path(course), class: 'btn btn-primary btn-large pull-right' %>
    </div>
    <br class="clr" />
    <hr />
  <% end %>
</div>