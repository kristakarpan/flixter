<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center"><%= current_course.title %></h1>
  <br />
  
  <%= image_tag current_course.image, class: 'img-responsive' %>
  <br />
  <%= link_to 'Preview As Student', course_path(current_course, as: "student"), class: 'btn btn-warning pull-right' %>
  

  <div>
    <%= link_to 'Add New Section', new_instructor_course_section_path(current_course), class: 'btn btn-primary pull-left' %>
  </div>
  <br class="clr" />
  <ul>
    <% current_course.sections.each do |section| %>
      <li>
        <%= section.title %>
        <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'pull-right btn btn-primary btn-xs' %>
        <ul>
          <% section.lessons.rank(:row_order).each do |lesson| %>
            <li>
              <b><%= lesson.title %></b>
              -
              <%= lesson.subtitle %>
            </li>
          <% end %>
        </ul>
        <br class="clr" />
      </li>
    <% end %>
  </ul>

</div>